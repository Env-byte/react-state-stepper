{
  "compilerOptions": {
    "strict": true,
    "module": "ES2015",
    "target": "ES2015",
    "outDir": "dist",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": [
      "DOM"
    ],
    "types": [
      "vitest/globals"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}